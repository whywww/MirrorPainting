<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="activitytest.example.com.test01.EditInfoActivity">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/head"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/Name"
        android:text="USERNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:layout_below="@+id/picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/username"
        android:text="admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_alignBaseline="@+id/Name"
        android:layout_alignBottom="@+id/Name"
        android:layout_toRightOf="@+id/Name"
        android:layout_toEndOf="@+id/Name" />

    <TextView
        android:id="@+id/Gender"
        android:text="GENDER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:layout_marginTop="23dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>

    <EditText
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_alignBottom="@+id/Region"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username" />

    <TextView
        android:id="@+id/Email"
        android:text="EMAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Region"
        android:layout_alignLeft="@+id/Region"
        android:layout_alignStart="@+id/Region"
        android:layout_marginTop="23dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBottom="@+id/Email"
        android:layout_alignLeft="@+id/region"
        android:layout_alignStart="@+id/region"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/Info"
        android:text="INFO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email"
        android:layout_alignLeft="@+id/Email"
        android:layout_alignStart="@+id/Email"
        android:layout_marginTop="23dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>

    <EditText
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBottom="@+id/Info"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/save"
        android:text="保存"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="11dp"
        android:background="#7fa87f"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:contentDescription="gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Gender"
        android:layout_alignLeft="@+id/region"
        android:layout_alignStart="@+id/region">

    <RadioButton
        android:id="@+id/girl"
        android:text="GIRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/boy"
            android:text="BOY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/girl"
            android:layout_toRightOf="@+id/girl"
            android:layout_toEndOf="@+id/girl" />

    </RadioGroup>

    <TextView
        android:id="@+id/Region"
        android:text="REGION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/Gender"
        android:layout_alignStart="@+id/Gender" />

    <ImageButton
        android:id="@+id/take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_open"
        android:layout_alignTop="@+id/picture"
        android:layout_toLeftOf="@+id/save"
        android:layout_toStartOf="@+id/save" />

    <ImageButton
        android:id="@+id/choose_from_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_new"
        android:layout_below="@+id/take_photo"
        android:layout_alignLeft="@+id/take_photo"
        android:layout_alignStart="@+id/take_photo" />


</RelativeLayout>
